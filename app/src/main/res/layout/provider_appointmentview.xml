<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/containerProviderAppointment"
    >

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Appointment ID: "
        android:textColor="#2E3192"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appointmentID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/label"
        android:text="12345"
        android:textColor="#2E3192" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginLeft="5dp"
        android:text="Canadian Tire"
        android:textColor="#707477" />

    <TextView
        android:id="@+id/selectedServices"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentID"
        android:layout_toEndOf="@+id/customerName"
        android:text="Brake Fluid Check"
        android:textAlignment="textEnd"
        android:layout_marginRight="20dp"
        android:textColor="#707477"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerName"
        android:layout_marginLeft="5dp"
        android:text="Guildford, Surrey, B.C."
        android:textColor="#707477" />

    <TextView
        android:id="@+id/appointmentStatusHead"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerName"
        android:layout_toEndOf="@+id/customerAddress"
        android:text=""
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/holo_orange_light" />


    <TextView
        android:id="@+id/dropOffDateLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Service booked "
        android:layout_below="@+id/customerAddress"
        android:textColor="#707477"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dropOffDate"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerAddress"
        android:layout_marginStart="-2dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/dropOffDateLabel"
        android:text="2022-04-14"
        android:textAlignment="textEnd"
        android:textColor="#65CF72" />

    <TextView
        android:id="@+id/pickUpDateLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Service done"
        android:layout_below="@+id/dropOffDateLabel"
        android:textColor="#707477"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pickUpDate"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropOffDate"
        android:layout_marginStart="-2dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/dropOffDateLabel"
        android:text="2022-05-10"
        android:textAlignment="textEnd"
        android:textColor="#65CF72" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pickUpDate"
        android:layout_marginTop="10dp"
        android:background="#DAB8D8"/>
</RelativeLayout>
