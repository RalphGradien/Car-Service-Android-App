<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/appointmentIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment ID: "
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/appointmentIDInt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/appointmentIDLabel"
        android:text="12345"
        android:textColor="@color/design_default_color_primary_dark" />

    <TextView
        android:id="@+id/customAppointmentDate"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/appointmentIDInt"
        android:text="2022-04-14"
        android:textColor="@color/design_default_color_secondary" />

    <TextView
        android:id="@+id/customAppointmentTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/customAppointmentDate"
        android:text="09:30AM"
        android:textColor="@color/design_default_color_secondary" />

    <TextView
        android:id="@+id/bookedServiceProviderName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointmentIDLabel"
        android:text="Canadian Tire"
        android:textColor="@color/material_dynamic_neutral70"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/bookedServiceProviderAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bookedServiceProviderName"
        android:layout_below="@+id/appointmentIDLabel"
        android:text="Guildford, Surrey, B.C."
        android:textColor="@color/material_dynamic_neutral70" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/bookedServiceProviderAddress"
        android:layout_below="@+id/appointmentIDLabel"
        android:text=""
        android:textColor="@color/material_dynamic_neutral70" />

    <TextView
        android:id="@+id/serviceAvailed"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookedServiceProviderName"
        android:text="Brake Fluid Check"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/bookingStatus"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookedServiceProviderName"
        android:layout_toEndOf="@+id/serviceAvailed"
        android:text="Ongoing"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/serviceAvailed"
        android:layout_marginTop="10dp"
        android:background="#DAB8D8"/>

</RelativeLayout>