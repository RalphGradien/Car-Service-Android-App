<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnArifin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonGilbert"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="89dp"
        android:onClick="onClickToGilbert"
        android:text="To Gilbert"
        app:layout_constraintBottom_toBottomOf="@+id/buttonArifin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonArifin" />

    <Button
        android:id="@+id/buttonArifin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="35dp"
        android:onClick="toArifin"
        android:text="To Arifin"
        app:layout_constraintEnd_toStartOf="@+id/buttonGilbert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDummyData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="64dp"
        android:text="Create Dummy Data"
        app:layout_constraintBottom_toTopOf="@+id/buttonGilbert"
        app:layout_constraintEnd_toEndOf="@+id/buttonGilbert" />

    <Button
        android:id="@+id/toKenneth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="@string/toKenneth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonArifin" />

    <Button
        android:id="@+id/createPDFbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="28dp"
        android:text="@string/generateReportBtnTxt"
        app:layout_constraintStart_toStartOf="@+id/toKenneth"
        app:layout_constraintTop_toBottomOf="@+id/toKenneth" />
</androidx.constraintlayout.widget.ConstraintLayout>